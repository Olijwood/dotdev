{
    "compilerOptions": {
        "lib": ["DOM", "DOM.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "types": ["vitest/globals", "@testing-library/jest-dom"],
        "paths": {
            "@/*": ["./src/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "vitest.setup.ts",
        "jest.setup.cjs",
        "jest.config.cjs",
        "es-modules.js",
        "prisma/seed/constants/tagts"
    ],
    "exclude": ["node_modules"]
}
